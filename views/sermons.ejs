<!DOCTYPE HTML>
<html lang = "en">

<!-- Reference: https://getbootstrap.com/docs/4.3/getting-started/introduction/ -->
    <head>
        <%- include('./partials/head'); %>
        <link rel="stylesheet" href="/sermons.css">
        <link rel="stylesheet" href="/footer.css">
        <script src="/sermons/sermons.js" charset="UTF-8"></script>
    </head>
    <body>

        <%- include('./partials/navbar', {active: "sermons"}); %>

    <div id="Recordings">
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: rgba(255, 255, 255, 0.7);">
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav nav-fill w-100" id="sermonNavBtns">
                    <li class="nav-item active" id="sermonNoteNav" onclick="activeSermonsNote()">
                        <a id="sermonNoteBtn" class="nav-link" href="#"><strong>Available Sermon Recordings</strong></a>
                    </li>
                    <li class="nav-item" id="allSermonNav" onclick="activeAllSermons()">
                        <a id="allSermonBtn" class="nav-link" href="#"><strong>More Sermons</strong></a>
                    </li>
                </ul>
            </div>
        </nav>
        
        <div class="sub_recording" id="subRecording" style="display: none;">
                <iframe src="https://drive.google.com/embeddedfolderview?id=1vtZtC7WWB0aj8qz78EFK1l19vB2bvMt4#grid" style="width:100%; height:1000px; "></iframe>

        </div>

        <div id="sermonsNotes">
            <% if(userId != "-1" && role == "admin"){ %>
                <form action="/sermons/uploadSermon" method="POST" enctype="multipart/form-data">
                    <div class="input-group mt-2">
                        <div class="custom-file">
                            <label class="custom-file-label" for="newSermon">Upload a New Sermon File</label>
                            <input type="file" class="custom-file-input" name="newSermon" id="newSermon" accept="audio/*" required>
                        </div>
                        <div class="input-group-append">
                            <button class="btn btn-secondary" type="submit">Upload</button>
                        </div>
                    </div>
                </form> 
            <% } %>
            
            <div class="card scroll px-2" style="background-color: rgba(255, 255, 255, 0.7);" id="sermons_table"> </div>

            <div class="card form-popup" id="add_sermon_note_container">
                <form id="add_sermon_note_form" action="" class="form-container" method="POST">
                    <h4 class="card-title pt-2" id="add_sermon_note_header"></h4>
                    <div class="form-group">
                        <label for="add_sermon_note_title"><b>Title</b></label>
                        <input class="form-control" type="text" id="add_sermon_note_title" name="add_sermon_note_title" required />
                    </div>
                    <div class="form-group">
                        <label for="add_sermon_note_content"><b>Content</b></label>
                        <textarea class="form-control" type="text" id="add_sermon_note_content" name="add_sermon_note_content" rows="10"></textarea>
                    </div>
                    <button id="close_add_sermon_note_btn" type="button" class="btn btn-secondary float-right m-2">Close</button>
                    <button id="save_add_sermon_note_btn" type="submit" class="btn btn-secondary float-right m-2">Save</button>
                </form>
            </div>
            
            <div class="card scroll form-popup px-2" id="display_sermon_note_container" style="max-height: 90%;">
                <h4 class="card-title pt-2" id="display_sermon_note_header"></h4>
                <div id="display_sermon_note_table">

                </div>
            </div>
            
        </div>
    </div>



    </body>
    <%- include('./partials/footer'); %>
</html>