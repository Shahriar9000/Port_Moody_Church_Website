<html>
	<head>
		<%- include('./partials/head'); %>

		<script src="/login/login.js" charset="UTF-8"></script>
	</head>
	<body>
		<%- include('./partials/navbar', {active: "login"}); %>

		<div class="card p-3" style="background-color: rgba(255, 255, 255, 0.7); width: 90vh; margin:auto">
			<h1 class="card-title">Login</h1>
			<form action = "/login/loginUser" method = "post">
				<div class="form-group">
					<label for="email">Email</label>
					<input class="form-control" type="email" id="email" name="email" required></input>
				</div>
				<div class="form-group">
					<label for="password" >Password</label>
					<input class="form-control" type="password" id="password" name="password" required></input>
				</div>
				<button class="btn btn-secondary" style="width: 100px" type="submit">Login</button>
				<a class="btn btn-secondary" style="width: 100px" href="/register">Register</a>

			</form>
		</div>
		
	</body>
</html>




